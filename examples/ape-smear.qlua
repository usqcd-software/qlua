-- perform APE smearing
require("stdlib")
require("gauge")
require("ape-smear")

L = qcd.lattice{4,4,4,8}
do
  local idx = L:Int(0)
  for i = 0, qcd.Nd - 1 do
    idx = idx * L[i] + L:pcoord(i)
  end
  S = L:RandomState(43, idx)
end

do 
  U = {}
  for i = 0, qcd.Nd - 1 do
    U[i+1] = toSUn(L, S:gaussian_ColorMatrix())
  end
end

V = APE_smear(U, 1.324, 10, 1e-7, 150, 3, L.all)

printf("------ done\n")

      