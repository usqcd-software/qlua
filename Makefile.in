# There is no PREFIX in this makefile, use configure to change the
# installation locations.
V = 0
.PHONY: all doc lib clean realclean install

BINDIR       = @bindir@
LIBDIR       = @libdir@
INCDIR       = @incdir@
DOCDIR       = @docdir@

CC           = @cc@
# add -fprofile-arcs -ftest-coverage to COPTS for coverage tests
COPTS        = @copts@
CFLAGS       = @cflags@

CXX          = @cxx@
CXXOPTS      = @cxxopts@
CXXFLAGS     = @cxxflags@

LD           = @ld@
LDFLAGS      = @ldflags@
LIBS         = @libs@

AR           = @ar@
RANLIB       = @ranlib@

LUA          = @lua@

QDP          = @qdp@
QDP_CF       = @qdp_cflags@
QDP_LF       = @qdp_ldflags@
QDP_LIBS     = @qdp_libs@

AFF          = @aff@
AFF_CF       = @aff_cflags@
AFF_LF       = @aff_ldflags@
AFF_LIBS     = @aff_libs@

HDF5          = @hdf5@
HDF5_CF       = @hdf5_cflags@
HDF5_LF       = @hdf5_ldflags@
HDF5_LIBS     = @hdf5_libs@

QUDA         = @quda@
QUDA_CF      = @quda_cflags@
QUDA_LF      = @quda_ldflags@
QUDA_LIBS    = @quda_libs@

CLOVER       = @clover@
CLOVER_CF    = @clover_cflags@
CLOVER_LF    = @clover_ldflags@
CLOVER_LIBS  = @clover_libs@

TWISTED       = @twisted@
TWISTED_CF    = @twisted_cflags@
TWISTED_LF    = @twisted_ldflags@
TWISTED_LIBS  = @twisted_libs@

MDWF         = @mdwf@
MDWF_CF      = @mdwf_cflags@
MDWF_LF      = @mdwf_ldflags@
MDWF_LIBS    = @mdwf_libs@

GSL          = @gsl@
GSL_CF       = @gsl_cflags@
GSL_LIBS     = @gsl_libs@

HDF5         = @hdf5@
HDF5_CF      = @hdf5_cflags@
HDF5_LF      = @hdf5_ldflags@
HDF5_LIBS    = @hdf5_libs@

CBLAS_LIBS   = @cblas_libs@

HYPRE        = @hypre@
HYPRE_CF     = @hypre_cflags@
HYPRE_LF     = @hypre_ldflags@
HYPRE_LIBS   = @hypre_libs@

QOPQDP       = @qopqdp@
QOPQDP_CF    = @qopqdp_cflags@
QOPQDP_LF    = @qopqdp_ldflags@
QOPQDP_LIBS  = @qopqdp_libs@

ARPACK       = @arpack@
ARPACK_CF    = @arpack_cflags@
ARPACK_LF    = @arpack_ldflags@
ARPACK_LIBS  = @arpack_libs@

## ZZZ add other modules here

#############################################################################
docfiles = COPYRIGHT README INSTALL config.log

library = libqlua.a
driver = qlua.c
headers = qlua.h
libsrc = fix.c \
         qcomplex.c \
         seqrandom.c \
         seqcolvec.c \
	 seqcolmat.c \
         seqdirferm.c \
         seqdirprop.c \
         qvector.c \
         qxml.c \
	 qlayout.c \
         lattice.c \
         latint.c \
	 latmulti.c \
         latreal.c \
         latrandom.c \
         latcomplex.c \
         latsubset.c \
         latcolvec.c \
	 latcolmat.c \
         latdirferm.c \
         latdirprop.c \
         qscatter.c \
         qgather.c \
         qgamma.c \
	 nersc_io.c \
	 qio_utils.c \
         qdpc_io.c \
         ddpairs_io.c \
         qdpcc_io.c \
         qomp.c

libsrcxx =

###############################################################################
ifneq ("$(AFF)", "")
  libsrc += aff_io.c
endif

ifneq ("$(HDF5)", "")
  libsrc += hdf5_io.c \
            sha256.c
endif

ifneq ("$(QOPQDP)", "")
   libsrc += qqopqdp.c \
             qqq-wmg.c
endif

ifneq ("$(QUDA)", "")
#  libsrcxx += qqudaxx.cpp
  libsrc += qquda.c
endif

ifneq ("$(CLOVER)", "")
  libsrc += qclover.c
endif

ifneq ("$(TWISTED)", "")
  libsrc += qtwisted.c
endif

ifeq ("@use_nc3@", "1")
ifneq ("$(MDWF)", "")
  libsrc += qmdwf.c
endif
endif

ifneq ("$(GSL)", "")
  libsrc += qmatrix.c \
            qroot.c \
            qmin.c
endif

ifneq ("$(ARPACK)", "")
  libsrc += qlanczos.c
endif

extrascr =

ifeq ("@use_nc3@", "1")
ifeq ("@extras@", "true")
  extrasrc += extras.c \
              save_bb.c \
              gen_laplace.c \
	      h5common.c \
	      qparam.c \
	      laph_wf_baryon.c \
	      save-q2pt.c \
	      save-q3pt.c \
	      laph_common.c \
	      save_npr.c \
	      extras_common.c \
	      lat_ft.c \
	      \
	      qlopt.c

ifneq ("$(GSL)", "")
  extrasrc += baryon.c
endif
endif
endif

hypresrc =
ifneq ("$(HYPRE)", "")
  include hypre/Makefile.inc
endif

## ZZZ add other optional modules here
###############################################################################
drvobj = $(driver:%.c=%.o)
libobj = $(libsrc:%.c=%.o)
libobjxx = $(libsrcxx:%.cpp=%.o)
extraobj = $(extrasrc:%.c=%.o)
hypreobj = $(hypresrc:%.c=%.o)
program = $(driver:%.c=%)

#############################################################################
ifeq ("$V", "0")
   E=@echo "  "
   C=@
else
   E=@echo > /dev/null ""
   C=
endif

CCMD  = $(CC) -c $(COPTS) -I. $(LUA:%=-I%/include) \
              $(CFLAGS) $(QDP_CF) $(AFF_CF) $(HDF5_CF) $(QUDA_CF) $(CLOVER_CF) $(TWISTED_CF) $(MDWF_CF)\
              $(GSL_CF) $(HYPRE_CF) $(ARPACK_CFLAGS) $(QOPQDP_CF)
CXXCMD  = $(CXX) -c $(CXXOPTS) -I. $(LUA:%=-I%/include) \
              $(CXXFLAGS) $(QDP_CF) $(AFF_CF) $(HDF5_CF) $(QUDA_CF) $(CLOVER_CF) $(TWISTED_CF) $(MDWF_CF)\
              $(GSL_CF) $(HYPRE_CF) $(ARPACK_CFLAGS) $(QOPQDP_CF)
LCMD  = $(LD) $(COPTS) $(LDFLAGS) $(LUA:%=-L%/lib) \
              $(QDP_LF) $(AFF_LF) $(HDF5_LF) $(QUDA_LF) $(CLOVER_LF) $(TWISTED_LF) $(MDWF_LF) $(HYPRE_LF) \
	      $(ARPACK_LDFLAGS) $(QOPQDP_LF)
LLIBS = $(QOPQDP_LIBS) $(QUDA_LIBS) \
        $(CLOVER_LIBS) $(TWISTED_LIBS) $(MDWF_LIBS) $(AFF_LIBS) $(HDF5_LIBS) $(QDP_LIBS) \
        $(GSL_LIBS) $(CBLAS_LIBS) $(HYPRE_LIBS) $(ARPACK_LIBS) \
        -llua $(LIBS)

###############################################################################
all: doc $(program)

doc:

lib: $(library)

clean:
	$ECLEAN objects
	$C$(RM) $(drvobj) $(libobj) $(libobjxx) $(extraobj) $(hypreobj) $(library)

realclean: clean
	$ECLEAN executables
	$C$(RM) $(program)

install: all doc
	$EINSTALL
	$C mkdir -p $(BINDIR)
	$C cp $(program) $(program)-config $(BINDIR)/
	$C mkdir -p $(LIBDIR)
	$C cp -r qlib/* $(LIBDIR)/
	$C mkdir -p $(DOCDIR)
	$C cp $(docfiles) $(DOCDIR)/
	$C mkdir -p $(DOCDIR)/examples
	$C cp examples/* $(DOCDIR)/examples/

###############################################################################
$(program): $(drvobj) $(library)
	$ELD $(program)
	$C$(LCMD) -o $(program) $(drvobj) -L. $(library:lib%.a=-l%) $(LLIBS)

$(drvobj) $(libobj): %.o: sources/%.c
	$ECC $@
	$C$(CCMD) -Isources -Iextras -Ihypre -o $@ $<

#XXX
#$(libobjxx): %.o: sources/%.cpp
#	$ECXX $@
#	$C$(CXXCMD) -Isources -o $@ $<

$(extraobj): %.o: extras/%.c
	$ECC $@
	$C$(CCMD) -Isources -Iextras -o $@ $<

$(hypreobj): %.o: hypre/%.c
	$ECC $@
	$C$(CCMD) -Isources -Ihypre -o $@ $<

$(library): $(libobj) $(libobjxx) $(extraobj) $(hypreobj)
	$EAR $(library)
	$C$(AR) cr $(library) $(libobj) $(libobjxx) $(extraobj) $(hypreobj)
	$C$(RANLIB) $(library)

$(drvobj) $(libobj) $(libobjxx): Makefile deps
qlua.o: modules.h

# dependencies not discoverable by utils/mkdeps
qdpc_io.o: sources/qdpc_io-z.c

# dependences generated by utils/mkdeps
include deps
