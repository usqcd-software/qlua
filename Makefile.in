# There is no PREFIX in this makefile, use configure to change the
# installation locations.
V = 0
.PHONY: all doc lib clean realclean install

BINDIR       = @bindir@
LIBDIR       = @libdir@
INCDIR       = @incdir@
DOCDIR       = @docdir@

CC           = @cc@
# add -fprofile-arcs -ftest-coverage to COPTS for coverage tests
COPTS        = @copts@
CFLAGS       = @cflags@

LD           = @ld@
LDFLAGS      = @ldflags@
LIBS         = @libs@

AR           = @ar@
RANLIB       = @ranlib@

LUA          = @lua@

QDP          = @qdp@
QDP_CF       = @qdp_cflags@
QDP_LF       = @qdp_ldflags@
QDP_LIBS     = @qdp_libs@

AFF          = @aff@
AFF_CF       = @aff_cflags@
AFF_LF       = @aff_ldflags@
AFF_LIBS     = @aff_libs@

CLOVER       = @clover@
CLOVER_CF    = @clover_cflags@
CLOVER_LF    = @clover_ldflags@
CLOVER_LIBS  = @clover_libs@

MDWF         = @mdwf@
MDWF_CF      = @mdwf_cflags@
MDWF_LF      = @mdwf_ldflags@
MDWF_LIBS    = @mdwf_libs@

## ZZZ add other modules here

#############################################################################
docfiles = COPYRIGHT README INSTALL config.log

library = libqlua.a
driver = qlua.c
headers = qlua.h
libsrc = fix.c \
         qvector.c \
         qcomplex.c \
         qgamma.c \
         lattice.c \
         latint.c \
         latrandom.c \
         latreal.c \
         latcomplex.c \
         latcolvec.c \
	 latcolmat.c \
         latdirferm.c \
         latdirprop.c \
	 latmulti.c \
         latsubset.c \
	 qio_utils.c \
         qdpc_io.c \
         qdpcc_io.c \
         ddpairs_io.c \
	 nersc_io.c \
         qxml.c

###############################################################################
ifneq ("$(AFF)", "")
  libsrc += aff_io.c
endif

ifneq ("$(CLOVER)", "")
  libsrc += qclover.c
endif

ifneq ("$(MDWF)", "")
  libsrc += qmdwf.c
endif

## ZZZ add other optional modules here
###############################################################################
drvobj = $(driver:%.c=%.o)
libobj = $(libsrc:%.c=%.o)
program = $(driver:%.c=%)

#############################################################################
ifeq ("$V", "0")
   E=@echo "  "
   C=@
else
   E=@echo > /dev/null ""
   C=
endif

CCMD  = $(CC) -c $(COPTS) -I. $(LUA:%=-I%/include) \
              $(CFLAGS) $(QDP_CF) $(AFF_CF) $(CLOVER_CF) $(MDWF_CF)
LCMD  = $(LD) $(COPTS) $(LDFALGS) $(LUA:%=-L%/lib) \
              $(QDP_LF) $(AFF_LF) $(CLOVER_LF) $(MDWF_LF)
LLIBS = $(MDWF_LIBS) $(CLOVER_LIBS) $(AFF_LIBS) $(QDP_LIBS) -llua $(LIBS)

###############################################################################
all: doc $(program)

doc:

lib: $(library)

clean:
	$ECLEAN objects
	$C$(RM) $(drvobj) $(libobj) $(library)

realclean: clean
	$ECLEAN executables
	$C$(RM) $(program)

install: all doc
	$EINSTALL
	$C mkdir -p $(BINDIR)
	$C cp $(program) $(program)-config $(BINDIR)/
	$C mkdir -p $(LIBDIR)
	$C cp -r qlib/* $(LIBDIR)/
	$C mkdir -p $(DOCDIR)
	$C cp $(docfiles) $(DOCDIR)/
	$C mkdir -p $(DOCDIR)/examples
	$C cp examples/* $(DOCDIR)/examples/
	$C for f in tutorials/*; do \
           mkdir -p $(DOCDIR)/$$f; cp $$f/* $(DOCDIR)/$$f; done

###############################################################################
$(program): $(drvobj) $(library)
	$ELD $(program)
	$C$(LCMD) -o $(program) $(drvobj) -L. $(library:lib%.a=-l%) $(LLIBS)

$(drvobj) $(libobj): %.o: sources/%.c
	$ECC $@
	$C$(CCMD) -Isources -o $@ $<

$(library): $(libobj)
	$EAR $(library)
	$C$(AR) cr $(library) $(libobj)
	$C$(RANLIB) $(library)

$(drvobj) $(libobj): Makefile deps
qlua.o: modules.h

# dependences generated by utils/get-deps
include deps
