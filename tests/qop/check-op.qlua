-------------- fermion dump
function dump_fermion(name, X)
   printf("(define fermion-%s '(\n", name);
   local L = X.lattice;
   local x, y, z, t, c, d;
   for x = 0, L[0] - 1 do
      for y = 0, L[1] - 1 do
         for z = 0, L[2] - 1 do
            for t = 0, L[3] - 1 do
               local f = X[{x,y,z,t}];
               for c = 0, 2 do
                  for d = 0, 3 do
                     local v = f[{c=c,d=d}];
                     if v:norm2() > 1e-10 then
                        printf("   ((%2d %2d %2d %2d %d %d) %20.10e  %20.10e)\n", x, y, z, t, c, d,
                               v:real(), v:imag());
                     end
                  end
               end
            end
         end
      end
   end
   printf("))\n");
end

