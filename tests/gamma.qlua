qcd.lattice({6})
S = qcd.RandomState(1, qcd.pcoord(0))

f1 = S:gaussian_DiracFermion()
f2 = S:gaussian_DiracFermion()

function D_dot(a,b)
   return qcd.dot(a,b):sum()
end

for i = 0, 15 do
   local z = gamma{n=i}
   local q1 = z * f1
   local q2 = z * f2
   local a = D_dot(f2, q1)
   local b = D_dot(q2, f1)
   if (a-b):abs() < 1e-6 then
      print("   Z", i, 0)
   else
      print("   Z", i, 1)
   end
end

