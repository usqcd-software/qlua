function show_tree(x)
  function skip(n)
     if n > 0 then
        printf("  ")
        skip(n-1)
     end
  end
  function show(x, n)
    skip(n)
    printf("<%s", x["$tag"])
    for i, v in pairs(x) do
      if type(i) ~= "number" and i ~= "$tag" then
         printf(" %s=\"%s\"", i, v)
      end
    end
    printf(">\n")
    for i, v in ipairs(x) do
      if type(v) == "string" then
        skip(n + 1)
        printf("[%d] = \"%s\"\n", i, v)
      else
        skip(n + 1)
        printf("[%d]: %s\n", i, type(v)) 
        show(v, n + 1)
      end
    end
    skip(n)
    printf("</%s>\n", x["$tag"])
  end

  printf("parsed XML:\n")
  show(x, 0)
end

function test_xml(s)
  printf("input:\n%s", s)
  local x = xml.parse(s)
  show_tree(x)
  -- local r=xml.unparse(x)
  -- printf("\n\nunparsed:\n%s\n\n", r)
  printf("\n\n\n")
end

